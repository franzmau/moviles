<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.marcolopez.prestamos.RegistroActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:background="@drawable/dinero"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:layout_marginTop="150dp"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="NOMBRE"
                android:textSize="13sp"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:imeOptions="actionNext"
                android:id="@+id/nombreEdtTxt"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:hint="USUARIO"
                android:textSize="13sp"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:imeOptions="actionNext"
                android:id="@+id/usuarioEdtTxt"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:hint="EMAIL"
                android:textSize="13sp"
                android:inputType="textEmailAddress"
                android:paddingLeft="15dp"
                android:id="@+id/correoEdtTxt"
                android:imeOptions="actionNext"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:hint="CONTRASEÑA"
                android:textSize="13sp"
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:id="@+id/contrasenaEdtTxt"
                android:imeOptions="actionNext"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="CONFIRMAR CONTRASEÑA"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:id="@+id/confContrasenaEdtTxt"
                android:imeOptions="actionDone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:id="@+id/registrarLyt"
                android:background="@drawable/background_button"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:text="Crear cuenta"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
